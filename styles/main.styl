//
// MAIN STYLES
// ===========
// Here is base styles of site
//

@import _variables

html
  height 100%
  max-height 100%
  font-size base-font-size

body
  -webkit-font-smoothing antialiased
  -moz-osx-font-smoothing grayscale
  text-rendering optimizeLegibility

  font-family base-font-family
  line-height 1.6em
  color base-text-color

::selection
  color selection-text-color
  background selection-bg-color
  text-shadow none

h1, h2, h3, h4
  margin 1.414em 0 0.5em
  font-weight bold
  line-height 1.2

h1
  margin-top 0
  font-size 3.157rem

h2
  font-size 2.369rem

h3
  font-size 1.777rem

h4
  font-size 1.333rem

small
  font-size 0.75rem

a
  color inherit
  text-decoration none
  border-bottom 1px dashed base-text-color
  &:hover
    border-bottom-style solid

.site-header
  @extend $block
  margin 5rem auto
  text-align center

  &__desc
    color lighten(base-text-color, 20%)

.main-content
  @extend $block
  color base-text-color
  @media (max-device-width: 480px)
    font-size .8rem
    @media (orientation: landscape)
      font-size .6rem

.post-item
  display block
  margin-bottom 2.5rem

  &__header
    display block
    text-align center
    margin-bottom 1rem
    h1
      font-size 2.369rem
      letter-spacing -1px
  &__meta
    font-family serif
    font-style italic
    font-size 0.8rem

  &__desc
    display block

  &__content
    display block

article
  code
    font-size .9rem
    padding .2rem .5rem
    background base-lines-color
    border-radius 3px

  pre
    background base-lines-color
    padding 1em
    overflow-y auto
    border-radius 3px

  img
    display block
    max-width 100%
    margin 0 auto
    border-radius 3px

  blockquote
    margin 0
    padding-left 1rem
    border-left 3px solid base-lines-color
    p a:last-of-type
      // Last link is a source
      font-style italic
      font-size 0.8rem
      &::before
        content 'â€” '

.nav
  &__left
    float left
  &__right
    float right
  &:after
    cf()

.site-footer
  @extend $block
  font-size .6rem
  line-height 1.6
  margin 3rem auto 5rem
  text-align center
