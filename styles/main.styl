//
// MAIN STYLES
// ===========
// Here is base styles of site
//

@import _variables

html
  height 100%
  max-height 100%
  font-size base-font-size

body
  -webkit-font-smoothing antialiased
  -moz-osx-font-smoothing grayscale
  text-rendering optimizeLegibility

  font-family base-font-family
  font-size 1rem
  line-height 1.6em
  color: base-text-color

::selection
  color selection-text-color
  background selection-bg-color
  text-shadow none

h1, h2, h3, h4, h5, h6
  font-weight 700
  line-height 1

a
  color inherit
  text-decoration none
  border-bottom 1px dashed base-text-color
  &:hover
    border-bottom-style solid

.site-header
  @extend $block
  margin 5rem auto
  text-align center

  &__title
    font-size 2.5em

  &__desc
    color #777

.main-content
  @extend $block
  color base-text-color
  @media (max-device-width: 480px)
    font-size .8em
    @media (orientation: landscape)
      font-size .6em

.post-item
  display block
  margin-bottom 2.5rem

  &__header
    display block
    text-align center
    h1
      font-weight 700
      font-size 2rem
      letter-spacing -1px
  &__meta
    font-family serif
    font-style italic
    font-size 0.8rem

  &__summary
    display block

  &__content
    display block

article
  code
    font-size .9em
    padding .2em .5em
    background base-lines-color
    border-radius 3px

  pre
    background base-lines-color
    padding 1em
    overflow-y auto
    border-radius 3px

  img
    display block
    max-width 100%
    margin 0 auto
    border-radius 3px

  blockquote
    margin 0
    padding-left 1em
    border-left 3px solid base-lines-color
    p a:last-of-type
      // Last link is a source
      font-style italic
      font-size 0.8em
      &::before
        content 'â€” '

.site-footer
  @extend $block
  font-size .6rem
  line-height 1.6em
  margin 3rem auto 5rem
  text-align center
