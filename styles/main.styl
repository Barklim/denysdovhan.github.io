//
// MAIN STYLES
// ===========
// Here is base styles of site
//

@import _variables

html
  height 100%
  max-height 100%
  font-size base-font-size

body
  -webkit-font-smoothing antialiased
  -moz-osx-font-smoothing grayscale
  text-rendering optimizeLegibility

  font-family base-font-family
  font-size 1rem
  line-height 1.6em
  color: base-text-color

::selection
  color selection-text-color
  background selection-bg-color
  text-shadow none

h1, h2, h3, h4, h5, h6
  font-weight 700
  line-height 1

a
  color inherit
  text-decoration none
  border-bottom 1px dashed #333
  &:hover
    border-bottom-style solid

article
  code
    font-size .9em
    padding .2em .5em
    background base-lines-color
    border-radius 3px

  img
    display block
    max-width 100%
    margin 0 auto
    border-radius 3px

  blockquote
    margin 0
    padding-left 1em
    border-left 3px solid base-lines-color
    p a:last-of-type
      // Last link is a source
      font-style italic
      font-size 0.8em
      &::before
        content '—'

.wrap
  font-size base-font-size
  font-family base-font-family
  color #333
  max-width 30em
  margin 3em auto 7em
  @media (max-device-width: 480px)
    font-size .8em
    @media (orientation: landscape)
      font-size .6em

.list
  margin 0
  padding 0
  list-style none

.list__item
  @extend .list

  a
    font-weight 700
    font-size 1.5em

  time
    font-family serif
    font-style italic
    font-size .7em
    &:before
      content '–'
      margin 0 .5em 0

  & + .list__item
    margin-top 1em

  p&-desc
    font-size .8em
