extends layout

block title
  title= post.title

block meta
  //- Summary contains tags
  //- meta(property='description', content=post.summary)

  //- if (post.image)
      //- meta(name='og:image', content=post.image)
  meta(name='og:url', content=post.url)
  meta(name='og:title', content=post.title)
  //- meta(name='og:description', content=post.summary)

block content
  article.post-item
    header.post-item__header
      h1= post.title
      span.post-item__meta
        time= post.date
        |  — 
        a(href='https://github.com/denysdovhan/denysdovhan.github.io/edit/premaster/posts/#{post.url}.md') edit on github
    section.post-item__content
      != post.content

block footer
  | If you think «#{post.title}» is awesome, please 
  a(href='/rss.xml', target='_blank') subscribe to RSS
  |, share it to you 
  a(href='https://twitter.com/intent/tweet?url=http://denysdovhan.com/#{post.url}&text=#{post.title}&via=denysdovhan', target="_blank") followers in Twitter
  |  and 
  a(href='https://www.facebook.com/sharer.php?u=http://denysdovhan.com/#{post.url}&t=#{post.title}', target="_blank") friends in Facebook
